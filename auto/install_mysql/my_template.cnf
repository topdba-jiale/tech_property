[client]
user=mysql
password=123456
default-character-set = utf8mb4

[mysqld]
server-id = 1
port = 3306
user = mysql
character_set_server=utf8mb4
collation-server = utf8mb4_unicode_ci
binlog_format = row
transaction_isolation = READ-COMMITTED
sql_mode="NO_ENGINE_SUBSTITUTION,NO_AUTO_CREATE_USER"
autocommit = 1
skip_name_resolve = 1
explicit_defaults_for_timestamp = 1
sync_binlog = 1
gtid_mode = on
enforce_gtid_consistency = 1
binlog_gtid_simple_recovery = 1
max_allowed_packet =1024M
max_connections = 1024
max_user_connections =512
max_connect_errors = 1000
max_execution_time=0
interactive_timeout = 1800
wait_timeout = 1800
open_files_limit=65000
lower_case_table_names=1
#log_warnings=2
log_error_verbosity=1
binlog_rows_query_log_events=1

############cache settings###################
max_binlog_cache_size =1G
max_binlog_size = 1G
binlog_cache_size =32M
join_buffer_size =2M
tmp_table_size =2M
read_buffer_size =2M
read_rnd_buffer_size =2M
sort_buffer_size =2M
query_cache_size =0
query_cache_type = 0

############log settings###################
expire_logs_days = 30
slow_query_log = 1
slow_query_log_file = /data/mysql3306/data/mysql3306-slow.log
long_query_time = 2
log_output='file,table'
log_queries_not_using_indexes = 1
log_slow_admin_statements = 1
log_slow_slave_statements = 1
log_throttle_queries_not_using_indexes = 10
min_examined_row_limit = 100

############replication settings###################
relay-log-index = /data/mysql3306/relaylog/mysql3306-relay-bin.index  
relay-log-info-file = /data/mysql3306/relaylog/mysql3306-relay-bin  
relay-log = /data/mysql3306/relaylog/mysql3306-relay-log.info 
log_slave_updates
slave_skip_errors = ddl_exist_errors
slave-parallel-type=LOGICAL_CLOCK
slave-parallel-workers=8
slave_preserve_commit_order=1
slave_pending_jobs_size_max = 2147483648
relay_log_recovery = 1
master_info_repository = TABLE
relay_log_info_repository = TABLE #replicate crash-safe

############file-name settings###################
socket = /tmp/mysql_3306.sock
pid-file = /data/mysql3306/data/mysql3306.pid  
tmpdir=/data/mysql3306/tmp
datadir = /data/mysql3306/data/  
log-bin=/data/mysql3306/binlog/mysql3306-bin  
log-bin-index=/data/mysql3306/binlog/mysql3306-bin.index  
log-error=/data/mysql3306/data/mysql3306.err

############innodb settings###################
innodb_undo_directory = /data/mysql3306/undolog/
innodb_page_size =16384
innodb_autoinc_lock_mode=2
innodb_buffer_pool_size = 4G
innodb_buffer_pool_instances = 2
innodb_page_cleaners=2
innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_at_shutdown = 1
innodb_lru_scan_depth = 2000
innodb_lock_wait_timeout = 5 #default 50
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000
innodb_flush_log_at_trx_commit = 1   #crash-safe
innodb_support_xa=on #crash-safe
innodb_flush_sync=on
innodb_flush_method = O_DIRECT
innodb_data_file_path = ibdata1:1024M:autoextend 
innodb_undo_logs = 128
innodb_undo_tablespaces = 126
innodb_flush_neighbors = 1
innodb_log_buffer_size =8M
innodb_log_file_size = 1024M
innodb_log_files_in_group=3
innodb_log_group_home_dir = /data/mysql3306/redolog/
innodb_purge_threads = 4
innodb_large_prefix = 1
innodb_thread_concurrency = 8
innodb_read_io_threads=8
innodb_write_io_threads=8
innodb_print_all_deadlocks = 1 #default 0
innodb_strict_mode = 0
innodb_sort_buffer_size =2M
innodb_open_files=65000
innodb_rollback_on_timeout=on

############plugin settings###################
#plugin-load=validate_password.so
#validate_password_policy=0
#validate_password_length=6
#plugin_dir=/usr/local/mysql57/lib/plugin
#plugin_load = "rpl_semi_sync_master=semisync_master.so;rpl_semi_sync_slave=semisync_slave.so"
#loose_rpl_semi_sync_master_enabled = 1
#loose_rpl_semi_sync_slave_enabled = 1
#loose_rpl_semi_sync_master_timeout = 5000

############5.7 new parameter settings###################
innodb_buffer_pool_dump_pct = 40
innodb_page_cleaners = 4
innodb_undo_log_truncate = 1
innodb_max_undo_log_size = 2G
innodb_purge_rseg_truncate_frequency = 128
binlog_gtid_simple_recovery=1
log_timestamps=system
transaction_write_set_extraction=MURMUR32
show_compatibility_56=on
secure_file_priv=/tmp/
